<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="plone">
<body>

<metal:content-core fill-slot="content-core">
    <metal:content-core define-macro="content-core">
        <metal:field use-macro="python:context.widget('text', mode='view')">
            Body text
        </metal:field>
        <div id="hebergement-recettes">
            <a href="" tal:attributes="href string:${portal_url}/recettes"
               i18n_domain="gdwmp.core" i18n:translate="evenements_recettes">
                Les recettes de cet hébergement
            </a>            
        </div>
        <div id="hebergement-evenements">
            <a href="" tal:attributes="href string:${portal_url}/evenements"
               i18n_domain="gdwmp.core" i18n:translate="evenements_hebergement">
                Les événemenets de cet hébergement
            </a>            
        </div>
    </metal:content-core>
</metal:content-core>

</body>
</html>

