<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="plone">
<body>

<metal:content-core fill-slot="content-core">
    <metal:content-core define-macro="content-core">
        <metal:field use-macro="python:context.widget('text', mode='view')">
            Body text
        </metal:field>
        <span tal:define="translate nocall:context/getTranslatedObjectUrl">
            <div id="hebergement-recettes">
                <a href=""
                   tal:attributes="href python:translate('recettes')"
                   i18n:domain="gdwmp" i18n:translate="evenements_recettes">
                    Les recettes de cet hébergement
                </a>            
            </div>
            <div id="hebergement-evenements">
                <a href=""
                   tal:attributes="href python:translate('evenements')"
                   i18n:domain="gdwmp" i18n:translate="evenements_hebergement">
                    Les événements de cet hébergement
                </a>            
            </div>
        </span>
    </metal:content-core>
</metal:content-core>

</body>
</html>
